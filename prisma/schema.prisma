generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model ViewCount {
    id    String @id // Blog's URL as the unique identifier
    views Int    @default(0) // Default views set to 0
}

model NewsLetterSubscriber {
    email String @id @unique
}
